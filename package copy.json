{
  "name": "chemicals-store",
  "version": "1.0.0",
  "description": "A minimal Electron application",
  "main": "main.js",
  "scripts": {
    "start": "nodemon --watch . --exec npm run dev",
    "dev": "electron .",
    "build": "build"
  },
  "author": "minisola",
  "devDependencies": {
    "cross-env": "^6.0.3",
    "electron": "^5.0.5",
    "electron-builder": "^20.44.4"
  },
  "dependencies": {
    "electron-store": "^4.0.0",
    "flatpickr": "^4.6.3",
    "fs-extra": "^8.1.0",
    "mysql2": "^1.6.5",
    "nedb": "^1.8.0",
    "sequelize": "^5.2.8",
    "vue": "^2.6.10",
    "vxe-table": "^2.6.7",
    "xe-utils": "^2.2.11"
  },
  "build": {
    "appId": "org.lostsakura.chemicals-store",
    "asar": true,
    "copyright": "Â©2019 lostsakura Inc.",
    "mac": {
      "category": "public.app-category.productivity",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "dmg": {
      "background": "build/appdmg.jpg",
      "icon": "build/icon.icns",
      "iconSize": 100,
      "contents": [
        {
          "x": 380,
          "y": 280,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 110,
          "y": 280,
          "type": "file"
        }
      ],
      "window": {
        "width": 500,
        "height": 500
      }
    },
    "win": {
      "target": [
        {
          "target": "nsis-web",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "artifactName": "${productName}-Web-Setup-${version}.${ext}",
      "publisherName": "lostsakura Inc."
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": false
    },
    "electronDownload": {
      "cache": "cache"
    }
  }
}
